{
	"name": "@gdol/server",
	"version": "2.0.0",
	"description": "REST API built on Fastify and Prisma",
	"scripts": {
		"start": "dotenv -c -- ts-node src/index.ts",
		"dev": "dotenv -c -- node-dev --no-notify -- src/index.ts",
		"build:payload": "dotenv -c -- payload build",
		"build:server": "tsc",
		"build": "build:payload && build:server",
		"generate:types": "dotenv -c -- payload generate:types",
		"generate:graphQLSchema": "dotenv -c -- payload generate:graphQLSchema",
		"seed": "dotenv -c -- ts-node seed.ts"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv-cli": "^5.1.0",
		"express": "^4.18.1",
		"payload": "^1.0.32"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/node": "^18.6.2",
		"axios": "^0.27.2",
		"node-dev": "^7.4.3",
		"ts-node": "^10.9.1",
		"typescript": "^4.7.4"
	},
	"prisma": {
		"seed": "ts-node prisma/seed.ts"
	}
}
