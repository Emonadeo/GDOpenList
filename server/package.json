{
	"name": "@gdol/server",
	"version": "2.0.0",
	"description": "REST API built on Fastify and Prisma",
	"scripts": {
		"start": "dotenv -c -- ts-node src/index.ts",
		"dev": "dotenv -c -- nodemon src/index.ts",
		"generate": "npm run generate-prisma && npm run generate-openapi",
		"generate-prisma": "prisma generate",
		"generate-openapi": "swagger-typescript-api -p ../openapi.yml -o ./src/generated -n openapi.ts --no-client --route-types",
		"push": "prisma db push",
		"seed": "prisma db seed",
		"studio": "prisma studio"
	},
	"dependencies": {
		"@prisma/client": "^3.12.0",
		"dotenv-cli": "^5.1.0",
		"fastify": "^3.27.4",
		"fastify-cors": "^6.0.3"
	},
	"devDependencies": {
		"@types/node": "^17.0.23",
		"axios": "^0.26.1",
		"nodemon": "^2.0.15",
		"prisma": "^3.12.0",
		"swagger-typescript-api": "^9.3.1",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.3"
	},
	"prisma": {
		"seed": "ts-node prisma/seed.ts"
	}
}
