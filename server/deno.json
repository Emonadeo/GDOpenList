{
	"$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
	"importMap": "import_map.json",
	"compilerOptions": {
		"allowJs": true,
		"strict": true
	},
	"tasks": {
		"run": "deno run --watch --allow-net=0.0.0.0:3001 main.ts"
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"lineWidth": 100,
			"indentWidth": 4,
			"singleQuote": true
		}
	}
}
